<?xml version="1.0" encoding="UTF-8"?>
<project name="module_resumosaa" default="compile.module.resumosaa">
  <dirname property="module.resumosaa.basedir" file="${ant.file.module_resumosaa}"/>
  
  <property name="module.jdk.home.resumosaa" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.resumosaa" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.resumosaa" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.resumosaa" value="-encoding UTF-8 -source 1.8 -target 1.8 ${compiler.args}"/>
  
  <property name="resumosaa.output.dir" value="${module.resumosaa.basedir}/target/classes"/>
  <property name="resumosaa.testoutput.dir" value="${module.resumosaa.basedir}/target/test-classes"/>
  
  <path id="resumosaa.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="resumosaa.module.production.classpath">
    <path refid="${module.jdk.classpath.resumosaa}"/>
    <path refid="library.org.apache.poi:poi:3.17.classpath"/>
    <path refid="library.org.jsoup:jsoup:1.11.2.classpath"/>
    <path refid="library.maven:_org.apache.poi:poi:3.17.classpath"/>
    <path refid="library.maven:_commons-codec:commons-codec:1.10.classpath"/>
    <path refid="library.maven:_org.apache.commons:commons-collections4:4.1.classpath"/>
  </path>
  
  <path id="resumosaa.runtime.production.module.classpath">
    <pathelement location="${resumosaa.output.dir}"/>
    <path refid="library.org.apache.poi:poi:3.17.classpath"/>
    <path refid="library.org.jsoup:jsoup:1.11.2.classpath"/>
    <path refid="library.maven:_org.apache.poi:poi:3.17.classpath"/>
    <path refid="library.maven:_commons-codec:commons-codec:1.10.classpath"/>
    <path refid="library.maven:_org.apache.commons:commons-collections4:4.1.classpath"/>
  </path>
  
  <path id="resumosaa.module.classpath">
    <path refid="${module.jdk.classpath.resumosaa}"/>
    <pathelement location="${resumosaa.output.dir}"/>
    <path refid="library.org.apache.poi:poi:3.17.classpath"/>
    <path refid="library.org.jsoup:jsoup:1.11.2.classpath"/>
    <path refid="library.maven:_org.apache.poi:poi:3.17.classpath"/>
    <path refid="library.maven:_commons-codec:commons-codec:1.10.classpath"/>
    <path refid="library.maven:_org.apache.commons:commons-collections4:4.1.classpath"/>
  </path>
  
  <path id="resumosaa.runtime.module.classpath">
    <pathelement location="${resumosaa.testoutput.dir}"/>
    <pathelement location="${resumosaa.output.dir}"/>
    <path refid="library.org.apache.poi:poi:3.17.classpath"/>
    <path refid="library.org.jsoup:jsoup:1.11.2.classpath"/>
    <path refid="library.maven:_org.apache.poi:poi:3.17.classpath"/>
    <path refid="library.maven:_commons-codec:commons-codec:1.10.classpath"/>
    <path refid="library.maven:_org.apache.commons:commons-collections4:4.1.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.resumosaa">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.resumosaa">
    <patternset refid="excluded.from.module.resumosaa"/>
  </patternset>
  
  <path id="resumosaa.module.sourcepath">
    <dirset dir="${module.resumosaa.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  <path id="resumosaa.module.test.sourcepath">
    <dirset dir="${module.resumosaa.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.resumosaa" depends="compile.module.resumosaa.production,compile.module.resumosaa.tests" description="Compile module resumosaa"/>
  
  <target name="compile.module.resumosaa.production" depends="register.custom.compilers" description="Compile module resumosaa; production classes">
    <mkdir dir="${resumosaa.output.dir}"/>
    <javac2 destdir="${resumosaa.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.resumosaa}/javac">
      <compilerarg line="${compiler.args.resumosaa}"/>
      <bootclasspath refid="resumosaa.module.bootclasspath"/>
      <classpath refid="resumosaa.module.production.classpath"/>
      <src refid="resumosaa.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.resumosaa"/>
    </javac2>
    
    <copy todir="${resumosaa.output.dir}">
      <fileset dir="${module.resumosaa.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.resumosaa.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.resumosaa.tests" depends="register.custom.compilers,compile.module.resumosaa.production" description="compile module resumosaa; test classes" unless="skip.tests">
    <mkdir dir="${resumosaa.testoutput.dir}"/>
    <javac2 destdir="${resumosaa.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.resumosaa}/javac">
      <compilerarg line="${compiler.args.resumosaa}"/>
      <bootclasspath refid="resumosaa.module.bootclasspath"/>
      <classpath refid="resumosaa.module.classpath"/>
      <src refid="resumosaa.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.resumosaa"/>
    </javac2>
    
    <copy todir="${resumosaa.testoutput.dir}">
      <fileset dir="${module.resumosaa.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.resumosaa" description="cleanup module">
    <delete dir="${resumosaa.output.dir}"/>
    <delete dir="${resumosaa.testoutput.dir}"/>
  </target>
</project>